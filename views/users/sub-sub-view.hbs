<style>
    .breatcome-area {
        background: url('/img/pbanner.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        padding: 154px 0;
    }

    .blog-content.style-two {
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: -16px;
    }

    .blog-thumb img {
        width: 50%;
        margin-top: 20px;
        margin-bottom: 20px;
        transition: .5s;
    }

    .blog-single-box.style-two.inner-page {
        margin-bottom: 30px;
        border-radius: 14px;
    }

    .card-image {
        max-width: 100%;
        /* Ensures the image doesn't exceed the container's width */
        max-height: 300px;
        /* Set the desired maximum height for the image */
        width: auto;
        /* Allows the image to scale with its aspect ratio */
        height: auto;
        /* Allows the image to scale with its aspect ratio */
    }

    .blog-thumb img {
        width: 100%;
        margin-top: 20px;
        margin-bottom: 20px;
        transition: .5s;
    }

    @media (min-width: 1200px) and (max-width: 1600px) {
        .blog-title.style-two h4 a {
            font-size: 16px;
        }
    }
