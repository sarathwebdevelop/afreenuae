<style>
    .breatcome-area {
        background: url('/assets/img/abbg.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        padding: 154px 0;
    }

    .blog-content.style-two {
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: -16px;
    }

    .blog-thumb img {
        width: 50%;
        margin-top: 20px;
        margin-bottom: 20px;
        transition: .5s;
    }

    .blog-single-box.style-two.inner-page {
        margin-bottom: 30px;
        border-radius: 14px;
    }
</style>


<!--==================================================-->
<!-- Start Thrown Bratcome Area -->
<!--==================================================-->
<div class="breatcome-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="breatcome-content">
                    <div class="breatcome-title">
                        <h1>Valves And Accessories</h1>
                    </div>
                    <div class="bratcome-text">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>Products</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-area style-two">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <div class="section-sub-title">
                        <h4>Our Products</h4>
                    </div>
                    <div class="section-main-title">
                        <h2>Valves And Accessories
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            {{#each products}}
            <div class="col-lg-4 col-md-6">
                <div class="blog-single-box style-two inner-page">
                    <div class="blog-thumb">
                        <a href="/images/product-images/{{this._id}}.png">
                            <center>
                                <img src="/images/product-images/{{this._id}}.png" width="20%" alt="">
                            </center>
                        </a>
                    </div>
                    <div class="blog-content style-two">

                        <div class="blog-title style-two">
                            <h4><a href="#!">{{this.name}}</a>
                            </h4>
                        </div>
                        <h6 style="display: inline;">Size : </h6>
                        <span style="display: inline;"> {{this.size}}</span><br>

                        <h6 style="display: inline;">Model No : </h6>
                        <span style="display: inline;"> {{this.model}}</span><br>

                        <h6 style="display: inline;">Material : </h6>
                        <span style="display: inline;"> {{this.material}}</span><br><br>

                    </div>
                </div>
            </div>
            {{/each}}




        </div>
    </div>
</div>




