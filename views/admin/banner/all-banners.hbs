<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
  data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

  <div class="page-wrapper">
    <div class="container">
      <br>
      <h2>Banner Management</h2>
      <br>
      <a href="/admin/banner/add-banner" class="btn btn-primary mb-3">+ Add Banner</a>
      {{#each banners}}
      {{/each}}

      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>No.</th>
                  {{!-- <th>Sub Heading</th>
                  <th>Main Heading</th>
                  <th>Quote</th>
                  <th>Description</th>
                  <th>Button Link</th> --}}
                  <th>Background img</th>
                  <th>Edit</th>
                  <th>Delete</th>

                </tr>
              </thead>
              <tbody>
                {{#each banners}}
                <tr>
                  <td>{{incremented @index}}</td>
                  {{!-- <td>{{this.subtitle}}</td>
                  <td>{{this.Mheading}}</td>
                  <td>{{this.quote}}</td>
                  <td>{{this.desc}}</td>
                  <td>{{this.btnlink}}</td> --}}
                  <td> <a href="/images/banner-images/{{this._id}}.png">
                      <img src="/images/banner-images/{{this._id}}.png" name="Image" class="image-fluid"
                        width="100%"></a></td>
                  <td><a href="/admin/banner/edit-banner/{{this._id}}" class="btn btn-dark mb-3"><i
                        class="bi bi-pencil-square" aria-hidden="true"></i></a></td>
                  <td><a href="/admin/banner/delete-banner/{{this._id}}" class="btn btn-danger"
                      onclick="return confirm('Are You Sure to Delete ?')"><i class="fa fa-trash"
                        aria-hidden="true"></i></a></td>


                </tr>
                {{/each}}



              </tbody>

            </table>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>