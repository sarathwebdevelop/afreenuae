<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
  data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

  <div class="page-wrapper">
    <div class="container">
      <br>
      <h2>Manage Stores</h2>
      <br>
      <a href="/admin/store/add-store" class="btn btn-primary mb-3">+ Add Store</a>


      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>store Name</th>
                  <th>store Location</th>
                  <th>Description</th>
                  <th>store Image</th>
                  <th>Edit</th>
                  <th>Delete</th>

                </tr>
              </thead>
              <tbody>
                {{#each stores}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.location}}</td>
                  <td>{{this.desc}}</td>
                  <td> <a href="/images/store-images/{{this._id}}.png">
                      <img src="/images/store-images/{{this._id}}.png" name="Image" class="image-fluid" width="40%"></a>
                  </td>

                  <td><a href="/admin/store/edit-store/{{this._id}}" class="btn btn-dark mb-3"><i
                        class="bi bi-pencil-square" aria-hidden="true"></i></a></td>
                  <td><a href="/admin/store/delete-store/{{this._id}}" class="btn btn-danger"
                      onclick="return confirm('Are You Sure to Delete ?')"><i class="fa fa-trash"
                        aria-hidden="true"></i></a></td>


                </tr>
                {{/each}}



              </tbody>

            </table>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>