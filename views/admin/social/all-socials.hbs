<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
    data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

    <div class="page-wrapper">
        <div class="container">
            <br>
            <h2>Social Media Management</h2>
            <br>
            <a href="/admin/social/add-social" class="btn btn-primary mb-3">+ Add social media</a>
            {{#each socials}}
            {{/each}}

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Url</th>
                                    <th>Icon</th>
                                    <th>Edit</th>
                                    <th>Delete</th>



                                </tr>
                            </thead>
                            <tbody>
                                {{#each socials}}
                                <tr>
                                    <td>{{incremented @index}}</td>
                                    <td>{{this.name}}</td>
                                    <td><a href="{{this.url}}" target="_blank">{{this.url}}</a></td>
                                    <td><img src="/images/social-images/{{this._id}}.png" name="Image"
                                            class="image-fluid" width="30%"></a></td>
                                    <td><a href="/admin/social/edit-social/{{this._id}}" class="btn btn-dark mb-3"><i
                                                class="bi bi-pencil-square" aria-hidden="true"></i></a></td>
                                    <td><a href="/admin/social/delete-social/{{this._id}}" class="btn btn-danger"
                                            onclick="return confirm('Are You Sure to Delete {{this.name}} ?')"><i
                                                class="fa fa-trash" aria-hidden="true"></i></a></td>


                                </tr>
                                {{/each}}



                            </tbody>

                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>