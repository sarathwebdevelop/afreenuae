<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
  data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

  <div class="page-wrapper">
    <div class="container">
      <br>
      <h2>Manage Products</h2>
      <br>
      <a href="/admin/product/add-product" class="btn btn-primary mb-3">+ Add Products</a>
      <a href="/admin/delete-all-products" onclick="return confirm('Are You Sure to Delete All Products ?')"
        class="btn btn-danger mb-3">Delete All Products</a>


      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Brand</th>
                  <th>Description</th>
                  <th>Size</th>
                  <th>Model No</th>
                  <th>Material</th>
                  <th>img</th>
                  <th>Edit</th>
                  <th>Delete</th>

                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.category}}</td>
                  <td>{{this.brand}}</td>
                  <td>{{this.desc}}</td>
                  <td>{{this.size}}</td>
                  <td>{{this.model}}</td>
                  <td>{{this.material}}</td>

                  <td> <a href="/images/product-images/{{this._id}}.png">
                      <img src="/images/product-images/{{this._id}}.png" name="Image" class="image-fluid"
                        width="40%"></a></td>
                  <td><a href="/admin/product/edit-product/{{this._id}}" class="btn btn-dark mb-3"><i
                        class="bi bi-pencil-square" aria-hidden="true"></i></a></td>
                  <td><a href="/admin/product/delete-product/{{this._id}}" class="btn btn-danger"
                      onclick="return confirm('Are You Sure to Delete ?')"><i class="fa fa-trash"
                        aria-hidden="true"></i></a></td>


                </tr>
                {{/each}}



              </tbody>

            </table>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>