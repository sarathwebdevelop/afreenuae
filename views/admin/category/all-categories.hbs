<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
  data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

  <div class="page-wrapper">
    <div class="container">
      <br>
      <h2>Manage Categories</h2>
      <br>
      <a href="/admin/category/add-category" class="btn btn-primary mb-3">+ Add Category</a>


      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>Image</th>
                  {{!-- <th>Destination Link</th> --}}
                  <th>Edit</th>
                  <th>Delete</th>

                </tr>
              </thead>
              <tbody>
                {{#each categories}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.name}}</td>
                  <td> <a href="/images/category-images/{{this._id}}.png">
                      <img src="/images/category-images/{{this._id}}.png" name="Image" class="image-fluid"
                        width="40%"></a></td>
                  {{!-- <td>{{this.dl}}</td> --}}
                  <td><a href="/admin/category/edit-category/{{this._id}}" class="btn btn-dark mb-3"><i
                        class="bi bi-pencil-square" aria-hidden="true"></i></a></td>
                  <td><a href="/admin/category/delete-category/{{this._id}}" class="btn btn-danger"
                      onclick="return confirm('Are You Sure to Delete ?')"><i class="fa fa-trash"
                        aria-hidden="true"></i></a></td>


                </tr>
                {{/each}}



              </tbody>

            </table>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>